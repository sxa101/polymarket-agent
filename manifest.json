  "categories": [
    "finance",
    "business",
    "productivity",
    "utilities"
  ],
  
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard", 
      "description": "View trading dashboard and portfolio",
      "url": "/?shortcut=dashboard",
      "icons": [
        {
          "src": "/assets/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Markets",
      "short_name": "Markets",
      "description": "Browse and analyze prediction markets", 
      "url": "/?shortcut=markets",
      "icons": [
        {
          "src": "/assets/shortcut-markets.png", 
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Analytics",
      "short_name": "Analytics",
      "description": "View performance analytics and reports",
      "url": "/?shortcut=analytics", 
      "icons": [
        {
          "src": "/assets/shortcut-analytics.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Alerts",
      "short_name": "Alerts", 
      "description": "Manage trading alerts and notifications",
      "url": "/?shortcut=alerts",
      "icons": [
        {
          "src": "/assets/shortcut-alerts.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+polymarket",
      "url": "/?handler=polymarket&url=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      },
      "icons": [
        {
          "src": "/assets/file-handler.png",
          "sizes": "256x256"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url"
    }
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "handle_links": "preferred",
  
  "capture_links": "existing-client-navigate",
  
  "permissions": [
    "storage",
    "notifications",
    "background-sync",
    "periodic-background-sync"
  ],
  
  "features": [
    "cross-origin-isolated"
  ]
}